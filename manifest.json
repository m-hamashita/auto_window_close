{
  "manifest_version": 3,
  "name": "Auto Window Close",
  "version": "1.0",
  "description": "Automatically closes the window when it becomes inactive.",
  "permissions": ["tabs", "windows"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "other_tab_close": {
      "suggested_key": {
        "default": "Ctrl+J"
      },
      "description": "Delete other tabs"
    },
    "close_duplicate_tabs": {
      "suggested_key": {
        "default": "Ctrl+K"
      },
      "description": "Delete other tabs"
    },
    "move_tabs_to_active_window": {
      "suggested_key": {
        "default": "Ctrl+I"
      },
      "description": "Delete other tabs"
    },
    "delete_same_domain_tab": {
      "suggested_key": {
        "default": "Ctrl+E"
      },
      "description": "Delete all tabs with the same domain as the active tab"
    }
  }
}
